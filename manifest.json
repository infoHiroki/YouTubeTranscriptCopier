{
  "manifest_version": 3,
  "name": "YouTube Transcript Copier",
  "version": "1.0",
  "description": "YouTubeの文字起こしをコピーする拡張機能",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],  "privacy_policy": "privacy-policy.html",
  "options_page": "options.html"
}
